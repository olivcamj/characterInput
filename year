import datetime

user_name = input("What is your name?\n").title()
print("Hi," + user_name)
ans = input("Would you like to know what year you will turn 100 years old? (yes/ no)\n")
if (ans == "yes"):
    age = int(input("Enter your age: \n"))
if ans == "no": 
    print("Thanks for your time.")
elif ans == None:
    print("May have forgotten to enter yes or no.")
    print(ans)
year = 100 - age

now = datetime.datetime.now()
current= year + now.year
print(user_name + ", you  will be 100 years old in " + str(current))
fun = print("Fun Fact:\n").upper()
print("A 100 years from now it will be year " + str(now.year + 100))
